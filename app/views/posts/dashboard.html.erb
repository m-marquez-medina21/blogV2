<form action="/posts/create" method="POST">

<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">

    <div>
        Titulo: <input name="title" type="text">
    </div>

    <div>
        Imagen: <input name="image_url" type="text"> 
    </div>

    <div>
        Contenido <input name="content" type="text"> 
    </div>
    <button type="submit">Submit</button>
</form>



<table>
<tr>
    <th>ID</th>
    <th>Title</th>
    <th>Created_at</th>
    <th>image_url</th>
    <th>Content</th>
</tr>
<% @posts.each do |post| %>
<tr>
    <td><%= post.id %></td>
    <td><%= post.title%></td>
    <td><%= post.created_at%></td>
    <td><%= image_tag post.image_url%></td>
    <td><%= post.content %></td>
</tr>
<% end %>
</table>